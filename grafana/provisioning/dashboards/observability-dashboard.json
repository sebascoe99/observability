{
  "annotations": {
    "list": []
  },
  "title": "Observability Dashboard",
  "tags": ["observability", "monitoring", "opentelemetry"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "uid": "observability-main",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "{{method}} {{route}} [{{status_code}}]",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 2,
      "title": "Response Time (p95 & p50)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p50",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 3,
      "title": "HTTP Status Codes",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum by(status_code) (rate(http_requests_total[1m]))",
          "legendFormat": "{{status_code}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "drawStyle": "bars",
            "barAlignment": 0
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "2.."
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "4.."
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "yellow"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byRegexp",
              "options": "5.."
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{status_code=~\"5..\"}[1m])) or vector(0)) / sum(rate(http_requests_total[1m])) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "Total Requests/sec",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 18,
        "y": 8,
        "w": 6,
        "h": 4
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "blue"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 6,
      "title": "Success Rate (2xx/3xx)",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{status_code=~\"[23]..\"}[1m])) or vector(0)) / sum(rate(http_requests_total[1m])) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 12,
        "w": 6,
        "h": 4
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 95,
                "color": "yellow"
              },
              {
                "value": 99,
                "color": "green"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "id": 9,
      "title": "Requests by Route",
      "type": "piechart",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum by(route) (rate(http_requests_total[5m]))",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 18,
        "y": 12,
        "w": 6,
        "h": 8
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value"]
        },
        "pieType": "pie"
      }
    },
    {
      "id": 7,
      "title": "Application Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "LOKI"
      },
      "targets": [
        {
          "expr": "{job=\"docker\", container_name=\"node-app\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 18,
        "h": 10
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 8,
      "title": "Request Methods Distribution",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM"
      },
      "targets": [
        {
          "expr": "sum by(method) (rate(http_requests_total[1m]))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 12,
        "w": 12,
        "h": 4
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    }
  ],
  "schemaVersion": 38,
  "version": 1
}

